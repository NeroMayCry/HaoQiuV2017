<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joeykwok.haoqiuv2017.main.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:titleTextColor="#FFF"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/main_fg_content"
        android:layout_below="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <!--<com.joeykwok.haoqiuv2017.utils.MyViewPager-->
        <!--android:id="@+id/main_viewpager"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@+id/main_toolbar">-->

    <!--</com.joeykwok.haoqiuv2017.utils.MyViewPager>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/main_nav_bar"
        android:background="@color/grey_300"/>

    <LinearLayout
        android:id="@+id/main_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/tv_home"
            style="@style/viewpager_navigation_bar_tab_style"
            android:drawableTop="@drawable/home"
            android:text="首页"/>

        <TextView
            android:id="@+id/tv_my"
            style="@style/viewpager_navigation_bar_tab_style"
            android:drawableTop="@drawable/my"
            android:text="我的"/>

    </LinearLayout>

</RelativeLayout>
